<form id="create-run-form" asp-controller="Home" asp-action="RunUpdated" method="post">

    <input type="hidden" asp-for="Run_Id" value="@Model.Run_Id"/>

    <label for="route">Route Name</label>
    <input type="text" id="route" asp-for="Route" value="@Model.Route" />

    <label for="date">Date</label>
    <input type="date" id="date" asp-for="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />

    <label for="distance">Distance</label>
    <input type="number" id="distance" asp-for="Distance" step="0.01" value="@Model.Distance" />

    <label for="pace-minutes">Pace (Minutes)</label>
    <input type="number" id="pace-minutes" asp-for="PaceMinutes" value="@Model.PaceMinutes" />

    <label for="pace-seconds">Pace (Seconds)</label>
    <input type="number" id="pace-seconds" asp-for="PaceSeconds" value="@Model.PaceSeconds" />

    <label for="notes">Notes</label>
    <textarea id="notes" asp-for="Notes">@Model.Notes</textarea>

    <input type="submit"/>
</form> 