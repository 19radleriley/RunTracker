@{
}

@section CreateRunStyles {
    <style>
        #create-run-form {

        }

        #create-run-form > * {
            display: block;
            margin-top: .5rem;
            margin-bottom: .5rem;
        }
    </style>
}

<form id="create-run-form" asp-controller="Home" asp-action="RunCreated" method="post">

    <label for="route">Route Name</label>
    <input type="text" id="route" asp-for="Route" />

    <label for="date">Date</label>
    <input type="date" id="date" asp-for="Date" value="@DateTime.Now.ToString()"/>

    <label for="distance">Distance</label>
    <input type="number" id="distance" asp-for="Distance" step="0.01" />

    <label for="pace-minutes">Pace (Minutes)</label>
    <input type="number" id="pace-minutes" asp-for="PaceMinutes" />

    <label for="pace-seconds">Pace (Seconds)</label>
    <input type="number" id="pace-seconds" asp-for="PaceSeconds" />

    <label for="notes">Notes</label>
    <textarea id="notes" asp-for="Notes"></textarea>

    <input type="submit" />
</form> 